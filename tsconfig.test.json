{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "outDir": "test-build",
    "baseUrl": "test",
    "strict": true
  },
  "include": ["test"],
  "exclude": ["node_modules", "example"]
}
