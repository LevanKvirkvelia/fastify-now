{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": ".build/esm",
    "declaration": true,
    "strict": true,
    "strictNullChecks":true,
    "lib": ["esnext"]
  },
  "include": ["index.ts"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
