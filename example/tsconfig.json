{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "incremental": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": ".dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}